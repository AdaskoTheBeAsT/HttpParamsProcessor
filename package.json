{
  "name": "HttpParamsProcessor",
  "version": "1.0.0",
  "description": "HttpParams processor",
  "main": "index.js",
  "author": "Adam Pluci≈Ñski <adaskothebeast@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "webpack --config webpack.config.js",
    "format": "prettier {src,e2e}/**/*.{ts,tsx,json,md,scss,css,less} --write",
    "test": "jest --watch",
    "test:ci": "jest --runInBand",
    "test:coverage": "jest --coverage",
    "ts-lint-console": "tslint --project tsconfig.json --config tslint.json --force src/**/*.ts",
    "type-check": "tsc --noEmit",
    "verify": "yarn format -l && jest --bail"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,e2e}/**/*.{js,jsx,ts,tsx},!src/app/api/**": [
      "yarn lint",
      "git add"
    ],
    "{src,e2e}/**/*.{js,jsx,ts,tsx,css,scss,md},!src/app/api/**": [
      "prettier --write",
      "git add"
    ]
  },
  "jestSonar": {
    "reportPath": "./.artifacts/frontendunittest/",
    "reportFile": "frontend-test.sonar.xml",
    "indent": 4
  },
  "jestNunitReporter": {
    "outputPath": "./.artifacts/frontendunittest/",
    "outputFilename": "frontend-test.nunit.xml"
  },
  "dependencies": {
    "@angular/common": "^9.0.4",
    "@angular/core": "^9.0.4",
    "@angular/platform-browser": "~9.0.4",
    "@angular/platform-browser-dynamic": "~9.0.4",
    "rxjs": "^6.5.4",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular/compiler": "^9.0.4",
    "@types/jasmine": "^3.5.7",
    "@types/jest": "^24.9.1",
    "@types/node": "^12.12.28",
    "babel-core": "^6.26.3",
    "babel-jest": "^24.9.0",
    "codelyzer": "^5.2.1",
    "husky": "^4.2.3",
    "jest": "^24.9.0",
    "jest-extended": "^0.11.2",
    "jest-html-reporter": "^2.8.0",
    "jest-multi-test-result-processor": "^1.0.0",
    "jest-nunit-reporter": "^1.3.1",
    "jest-preset-angular": "^8.0.0",
    "jest-sonar-reporter": "^2.0.0",
    "lint-staged": "^10.0.8",
    "ng-mocks": "^9.0.0",
    "prettier": "^1.19.1",
    "rxjs-tslint-rules": "^4.29.0",
    "stylelint": "~13.2.0",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-config-recommended-scss": "~4.2.0",
    "stylelint-config-standard": "~20.0.0",
    "stylelint-scss": "~3.14.2",
    "ts-jest": "^24.3.0",
    "ts-loader": "^6.2.1",
    "ts-node": "~8.6.2",
    "tslint": "^6.0.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^9.0.0",
    "typescript": "^3.7.3",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.11",
    "webpack-node-externals": "^1.7.2"
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "es5",
    "arrowParens": "always",
    "useTabs": false,
    "tabWidth": 2,
    "semi": true,
    "bracketSpacing": true,
    "overrides": [
      {
        "files": "*.scss",
        "options": {
          "singleQuote": false
        }
      }
    ]
  }
}
