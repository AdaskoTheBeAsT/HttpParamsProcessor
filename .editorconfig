# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
trim_trailing_whitespace = true

[*.ts]
indent_size = 2
insert_final_newline = true

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.html]
indent_size = 2

[*.scss]
indent_size = 4